<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/_coordinator"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/_app_bar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay">
		<androidx.appcompat.widget.Toolbar
			android:id="@+id/_toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:popupTheme="@style/AppTheme.PopupOverlay" />
	</com.google.android.material.appbar.AppBarLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">
		<LinearLayout
			android:id="@+id/linear1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:background="@drawable/images_3"
			android:orientation="vertical"
			android:layout_gravity="center_horizontal">

			<ImageView
				android:id="@+id/imageview1"
				android:layout_width="74dp"
				android:layout_height="68dp"
				android:layout_gravity="center_horizontal"
				android:scaleType="fitXY"
				android:src="@drawable/icon" />

			<TextView
				android:id="@+id/uqno"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:paddingLeft="14dp"
				android:paddingTop="10dp"
				android:paddingRight="14dp"
				android:paddingBottom="10dp"
				android:background="@drawable/images_14"
				android:text="Unique Question No. "
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#000000"
				android:singleLine="true"
				android:layout_gravity="center_horizontal|center_vertical" />
			<LinearLayout
				android:id="@+id/linear4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:gravity="left|center_vertical"
				android:orientation="vertical">

				<LinearLayout
					android:id="@+id/linear13"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="2dp"
					android:gravity="left|center_vertical"
					android:orientation="horizontal"
					android:padding="2dp">

					<TextView
						android:id="@+id/textview_department"
						android:layout_width="260dp"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:background="@drawable/images_14"
						android:gravity="left|center_vertical"
						android:paddingLeft="16dp"
						android:paddingTop="5dp"
						android:paddingRight="16dp"
						android:paddingBottom="5dp"
						android:singleLine="true"
						android:text="Department :"
						android:textColor="#000000"
						android:textSize="12sp"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/textview_semester"
						android:layout_width="95dp"
						android:layout_height="35dp"
						android:layout_gravity="right|center_vertical"
						android:layout_marginLeft="5dp"
						android:background="@drawable/images_14"
						android:gravity="left|center_vertical"
						android:paddingLeft="8dp"
						android:paddingTop="5dp"
						android:paddingRight="8dp"
						android:paddingBottom="5dp"
						android:singleLine="true"
						android:text="Semester : "
						android:textColor="#000000"
						android:textSize="12sp"
						android:textStyle="bold" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear12"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="2dp"
					android:gravity="left|center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview7"
						android:layout_width="100dp"
						android:layout_height="35dp"
						android:paddingLeft="8dp"
						android:paddingTop="5dp"
						android:paddingRight="5dp"
						android:paddingBottom="5dp"
						android:background="@drawable/images_14"
						android:gravity="center_horizontal|center_vertical"
						android:text="Subject :"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#000000"
						android:singleLine="true" />
					<Spinner
						android:id="@+id/spinner_subjectlist"
						android:layout_width="match_parent"
						android:layout_height="35dp"
						android:layout_marginLeft="5dp"
						android:padding="4dp"
						android:background="@drawable/images_6"
						android:spinnerMode="dropdown" />
				</LinearLayout>

				<EditText
					android:id="@+id/question"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginTop="5dp"
					android:background="@drawable/images_14"
					android:gravity="left|top"
					android:hint="type question here......."
					android:imeOptions="actionNext"
					android:lines="4"
					android:paddingLeft="22dp"
					android:paddingTop="10dp"
					android:paddingRight="22dp"
					android:paddingBottom="10dp"
					android:textColor="#000000"
					android:textColorHint="#607D8B"
					android:textSize="14sp" />
				<CheckBox
					android:id="@+id/checkbox1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="@drawable/images_14"
					android:gravity="center_horizontal|center_vertical"
					android:text="True and False"
					android:textSize="12sp"
					android:textStyle="bold"
					android:textColor="#000000"
					android:layout_gravity="center_horizontal|center_vertical" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:gravity="left|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/textview1"
					android:layout_width="100dp"
					android:layout_height="35dp"
					android:padding="5dp"
					android:background="@drawable/images_14"
					android:gravity="center_horizontal|center_vertical"
					android:text="Option 1"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#000000"
					android:singleLine="true" />
				<EditText
					android:id="@+id/op1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:padding="8dp"
					android:background="@drawable/images_6"
					android:textSize="14sp"
					android:textColor="#000000"
					android:hint="type Option 1 here"
					android:textColorHint="#607D8B"
					android:singleLine="true"
					android:imeOptions="actionNext" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear6"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:gravity="left|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/textview2"
					android:layout_width="100dp"
					android:layout_height="35dp"
					android:padding="5dp"
					android:background="@drawable/images_14"
					android:gravity="center_horizontal|center_vertical"
					android:text="Option 2"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#000000"
					android:singleLine="true" />
				<EditText
					android:id="@+id/op2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:padding="8dp"
					android:background="@drawable/images_6"
					android:textSize="14sp"
					android:textColor="#000000"
					android:hint="type Option 2 here"
					android:textColorHint="#607D8B"
					android:singleLine="true"
					android:imeOptions="actionNext" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear7"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:gravity="left|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/textview3"
					android:layout_width="100dp"
					android:layout_height="35dp"
					android:padding="5dp"
					android:background="@drawable/images_14"
					android:gravity="center_horizontal|center_vertical"
					android:text="Option 3"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#000000"
					android:singleLine="true" />
				<EditText
					android:id="@+id/op3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:padding="8dp"
					android:background="@drawable/images_6"
					android:textSize="14sp"
					android:textColor="#000000"
					android:hint="type Option 3 here"
					android:textColorHint="#607D8B"
					android:singleLine="true"
					android:imeOptions="actionNext" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear8"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:gravity="left|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/textview4"
					android:layout_width="100dp"
					android:layout_height="35dp"
					android:padding="5dp"
					android:background="@drawable/images_14"
					android:gravity="center_horizontal|center_vertical"
					android:text="Option 4"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#000000"
					android:singleLine="true" />
				<EditText
					android:id="@+id/op4"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:padding="8dp"
					android:background="@drawable/images_6"
					android:textSize="14sp"
					android:textColor="#000000"
					android:hint="type Option 4 here"
					android:textColorHint="#607D8B"
					android:singleLine="true"
					android:imeOptions="actionDone" />
			</LinearLayout>

			<LinearLayout
				android:id="@+id/linear9"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:gravity="left|center_vertical"
				android:orientation="horizontal"
				android:padding="2dp">

				<TextView
					android:id="@+id/textview5"
					android:layout_width="100dp"
					android:layout_height="35dp"
					android:background="@drawable/images_14"
					android:gravity="center_horizontal|center_vertical"
					android:padding="5dp"
					android:singleLine="true"
					android:text="Answer"
					android:textColor="#000000"
					android:textSize="16sp"
					android:textStyle="bold" />

				<Spinner
					android:id="@+id/spinner_op_ans"
					android:layout_width="match_parent"
					android:layout_height="35dp"
					android:layout_marginLeft="5dp"
					android:background="@drawable/images_6"
					android:padding="4dp"
					android:spinnerMode="dropdown" />
			</LinearLayout>

			<LinearLayout
				android:id="@+id/linear10"
				android:layout_width="130dp"
				android:layout_height="60dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="5dp"
				android:background="#B39DDB"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				android:padding="4dp">

				<Button
					android:id="@+id/action"
					android:layout_width="120dp"
					android:layout_height="50dp"
					android:layout_gravity="center_horizontal"
					android:background="@drawable/ghs_3"
					android:gravity="center_horizontal|center_vertical"
					android:padding="8dp"
					android:text="ADD"
					android:textColor="#FFFFFF"
					android:textSize="25sp"
					android:textStyle="bold" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

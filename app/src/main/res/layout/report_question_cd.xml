<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/l1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="2dp"
		android:background="@drawable/eee_1"
		android:gravity="center_horizontal|top"
		android:orientation="vertical">
		<TextView
			android:id="@+id/tv"
			android:focusable="false"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:padding="2dp"
			android:background="@drawable/ddd_1"
			android:gravity="center_horizontal|center_vertical"
			android:text="Why Reporting this question wrong...\?"
			android:textSize="20sp"
			android:textStyle="bold"
			android:textColor="#FFFFFF" />
		<LinearLayout
			android:id="@+id/l2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:paddingLeft="7dp"
			android:paddingTop="5dp"
			android:paddingRight="7dp"
			android:paddingBottom="5dp"
			android:gravity="center_vertical"
			android:orientation="vertical">
			<CheckBox
				android:id="@+id/cb_1"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="5dp"
				android:padding="8dp"
				android:background="@drawable/images_6"
				android:gravity="center_horizontal|center_vertical"
				android:text="Question is wrong."
				android:textSize="14sp"
				android:textStyle="bold"
				android:textColor="#000000" />
			<CheckBox
				android:id="@+id/cb_2"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:padding="8dp"
				android:background="@drawable/images_6"
				android:gravity="center_horizontal|center_vertical"
				android:text="Answer is wrong/missing."
				android:textSize="14sp"
				android:textStyle="bold"
				android:textColor="#000000" />
			<CheckBox
				android:id="@+id/cb_3"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:padding="8dp"
				android:background="@drawable/images_6"
				android:gravity="center_horizontal|center_vertical"
				android:text="Spelling mistakes."
				android:textSize="14sp"
				android:textStyle="bold"
				android:textColor="#000000" />
			<EditText
				android:id="@+id/et_other"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:paddingLeft="12dp"
				android:paddingTop="10dp"
				android:paddingRight="12dp"
				android:paddingBottom="15dp"
				android:background="@drawable/images_6"
				android:textSize="14sp"
				android:textColor="#000000"
				android:hint="Other remarks"
				android:textColorHint="#607D8B"
				android:lines="3" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/l3"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<Button
				android:id="@+id/cd_report"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="20dp"
				android:padding="8dp"
				android:text="Report"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#000000" />
			<Button
				android:id="@+id/cd_cancel"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:padding="8dp"
				android:text="Cancel"
				android:textSize="18sp"
				android:textStyle="bold"
				android:textColor="#000000" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>

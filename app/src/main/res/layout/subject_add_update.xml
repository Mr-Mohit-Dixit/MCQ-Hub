<androidx.coordinatorlayout.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/_coordinator"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<com.google.android.material.appbar.AppBarLayout
		android:id="@+id/_app_bar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/AppTheme.AppBarOverlay">
		<androidx.appcompat.widget.Toolbar
			android:id="@+id/_toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			android:background="?attr/colorPrimary"
			app:popupTheme="@style/AppTheme.PopupOverlay" />
	</com.google.android.material.appbar.AppBarLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">
		<LinearLayout
			android:id="@+id/linear1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:background="@drawable/images_4"
			android:orientation="vertical"
			android:layout_gravity="center_horizontal">
			<ImageView
				android:id="@+id/imageview1"
				android:layout_width="120dp"
				android:layout_height="120dp"
				android:src="@drawable/sjj"
				android:scaleType="fitXY"
				android:layout_gravity="center_horizontal" />
			<LinearLayout
				android:id="@+id/linear4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<TextView
					android:id="@+id/textview_name"
					android:layout_width="150dp"
					android:layout_height="35dp"
					android:paddingLeft="8dp"
					android:paddingTop="5dp"
					android:paddingRight="5dp"
					android:paddingBottom="5dp"
					android:background="@drawable/images_14"
					android:gravity="center_horizontal|center_vertical"
					android:text="Subject Code"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="#000000"
					android:singleLine="true" />
				<EditText
					android:id="@+id/subject_code"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:paddingLeft="10dp"
					android:paddingTop="8dp"
					android:paddingRight="8dp"
					android:paddingBottom="8dp"
					android:background="@drawable/images_6"
					android:textSize="16sp"
					android:textColor="#000000"
					android:hint="Subject Code"
					android:textColorHint="#607D8B"
					android:singleLine="true"
					android:inputType="numberSigned"
					android:imeOptions="actionNext" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear5"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<TextView
					android:id="@+id/textview_contact"
					android:layout_width="150dp"
					android:layout_height="35dp"
					android:paddingLeft="8dp"
					android:paddingTop="5dp"
					android:paddingRight="5dp"
					android:paddingBottom="5dp"
					android:background="@drawable/images_14"
					android:gravity="center_horizontal|center_vertical"
					android:text="Subject Name"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="#000000"
					android:singleLine="true" />
				<EditText
					android:id="@+id/subject_name"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:paddingLeft="10dp"
					android:paddingTop="8dp"
					android:paddingRight="8dp"
					android:paddingBottom="8dp"
					android:background="@drawable/images_6"
					android:textSize="16sp"
					android:textColor="#000000"
					android:hint="Subject Name"
					android:textColorHint="#607D8B"
					android:singleLine="true"
					android:imeOptions="actionNext" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear8"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<TextView
					android:id="@+id/textviwe_"
					android:layout_width="150dp"
					android:layout_height="35dp"
					android:paddingLeft="8dp"
					android:paddingTop="5dp"
					android:paddingRight="5dp"
					android:paddingBottom="5dp"
					android:background="@drawable/images_14"
					android:gravity="center_horizontal|center_vertical"
					android:text="Semester"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="#000000"
					android:singleLine="true" />
				<Spinner
					android:id="@+id/spinner_semester"
					android:layout_width="match_parent"
					android:layout_height="35dp"
					android:layout_marginTop="5dp"
					android:padding="4dp"
					android:background="@drawable/images_6"
					android:spinnerMode="dropdown" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear9"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<TextView
					android:id="@+id/textview9"
					android:layout_width="150dp"
					android:layout_height="35dp"
					android:paddingLeft="8dp"
					android:paddingTop="5dp"
					android:paddingRight="5dp"
					android:paddingBottom="5dp"
					android:background="@drawable/images_14"
					android:gravity="center_horizontal|center_vertical"
					android:text="Department"
					android:textSize="18sp"
					android:textStyle="bold"
					android:textColor="#000000"
					android:singleLine="true" />
				<Spinner
					android:id="@+id/spinner_department"
					android:layout_width="match_parent"
					android:layout_height="35dp"
					android:layout_marginTop="5dp"
					android:padding="4dp"
					android:background="@drawable/images_6"
					android:spinnerMode="dropdown" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear10"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:padding="4dp"
				android:background="#F4511E"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				android:layout_gravity="center_horizontal">
				<Button
					android:id="@+id/add_update"
					android:layout_width="160dp"
					android:layout_height="50dp"
					android:padding="2dp"
					android:background="@drawable/images_16"
					android:gravity="center_horizontal|center_vertical"
					android:text="ADD"
					android:textSize="30sp"
					android:textStyle="bold"
					android:textColor="#000000"
					android:layout_gravity="center_horizontal|center_vertical" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
